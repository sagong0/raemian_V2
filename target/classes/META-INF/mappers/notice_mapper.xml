<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="raemian.admin.mapper.AdminNoticeMapper">
	
	<select id="findAll" resultType="raemian.admin.domain.Notice">
	SELECT * FROM notice
	</select>
	
	
	<select id="findByIdx" resultType="raemian.admin.domain.Notice">
	SELECT * FROM notice
	WHERE nidx=#{nidx}
	</select>
	
	
	
	<select id="findByCurrentPage" resultType="raemian.admin.domain.Notice">
	SELECT * FROM notice
	order by nidx desc
	LiMIT #{pNo},3
	</select>
	
	<select id="findBySearchWord" resultType="raemian.admin.domain.Notice">
	SELECT * FROM notice
	WHERE ntitle LIKE concat ('%',#{searchWord},'%')
	order by nidx desc
	</select>
	
	<select id="findBySearchWordAndCurrentPage" resultType="raemian.admin.domain.Notice">
	SELECT * FROM notice
	WHERE ntitle LIKE concat ('%',#{searchWord},'%')
	order by nidx desc
	LIMIT #{pNo},3
	</select>
	
	<insert id="saveNotice" parameterType="raemian.admin.dto.NoticeForm">
	INSERT INTO notice
	VALUES ('0',#{ntitle},#{nwriter},#{ncontent},
	<if test="nfile != null and !nfile.isEmpty()">
        #{storeFileName}
    </if>
    <if test="nfile == null or nfile.isEmpty()">
        ''
    </if>
	,0,now())
	</insert>
	
	<delete id="delNotice">
	DELETE FROM notice
	WHERE nidx=#{nidx}
	</delete>
	
</mapper>